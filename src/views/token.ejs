<!DOCTYPE html>


<%- include('partials/header'); -%>
    <link rel="stylesheet" href="../public/CSS/register.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <title>Ingresar Código</title>
    <style>
        body,
        h1,
        label,
        button {
            font-family: 'Poppins', sans-serif;
        }

        main {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            background-color: #f5f5f5;
        }

        .form-signin {
            width: 100%;
            max-width: 400px;
            padding: 20px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        h1 {
            font-size: 1.8rem;
            font-weight: 600;
        }

        button {
            border-radius: 25px;
        }

        input {
            border-radius: 15px;
            padding: 0.75rem;
        }

        .btn-success {
            font-weight: 600;
        }

        #arrow {
            position: absolute;
            top: 20px;
            left: 20px;
        }

        #arrow img {
            width: 40px;
        }
    </style>
    </head>

    <body class="bg-white text-dark">

        <div>
            <a id="arrow" href="/"><img class="" width="200" src="../public/img/arrow-left.svg"></a>
        </div>

        <main class="form-signin p-0">
            <div class="shadow-lg m-2 p-3 rounded">
                <form action="/user/verificarTokenLogin" method="post">
                    <h1 class="my-4 text-center">Ingresar Código</h1>
                    <div class="form-floating mb-4">
                        <input type="number" class="form-control" id="floatingInput" placeholder="Código" name="tokenn"
                            required>
                        <label for="floatingInput">Código</label>
                    </div>
                    <button class="btn btn-success w-100 p-2 fw-bold" type="submit">Continuar</button>
                </form>

                <form action="/user/reenviarToken" method="post" class="mt-4">
                    <button class="btn btn-success w-100 p-2 fw-bold" type="submit">Reenviar Código</button>
                </form>
            </div>
        </main>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </body>

    </html>